<html>
  <head>
    <title>Smoko</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <link rel="shortcut icon" type="image/x-icon" href="/assets/logo.jpg" />
    <meta name="description" content="Curators of quality coffee, healthy meals and delicious macarons, Smoko specializes in delivering customized coffee and tea and all things in between.">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="nav-section col-s-12">
      <div class="nav-bar-top col-s-12">
        <%= image_tag "logo.jpg", alt: "logo", class: "logo" %>
        <h1 class="title"> <%= link_to "smoko", root_path %> </h1>
        <div class="icons">
          <%= link_to "https://www.facebook.com/Smoko-Coffee-788828204568094/", target: "_blank" do %>
            <i class="fab fa-facebook" data-toggle="tooltip" data-placement="auto" title="Check out our Facebook!"></i>
          <% end %>
          <%= mail_to "smoko@gmail.com" do %>
            <i class="far fa-envelope" data-toggle="tooltip" data-placement="auto" title="Send us an e-mail!"></i>
          <% end %>
        </div>
      </div>
      <ul class="navbar nav-pills col-s-12">
        <li class="nav-item col-s-4 col-x-2"><%= link_to "our story", story_path %></li>
        <!-- <li class="nav-item"><%#= link_to "our story", story_path, class: "nav-link active" %></li> -->
        <li class="nav-item col-s-4 col-x-2"><%= link_to "our team", team_path %></li>
        <li class="nav-item col-s-4 col-x-2"><%= link_to "our menu", menu_path %></li>
        <li class="nav-item col-s-4 col-x-2"><%= link_to "our reviews", reviews_path %></li>
        <li class="nav-item col-s-4 col-x-2"><%= link_to "social responsibility", responsibility_path %></li>
        <li class="nav-item col-s-4 col-x-2"><%= link_to "contact us", contact_path %></li>
      </ul>
    </div>
    <%= yield %>
    <div class="footer">
    </div>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag "application" %>
  </body>
</html>
